<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WORKOUT"
        android:textSize="50dp"
        android:textColor="@color/cardview_dark_background"
        android:textAlignment="center"
        >
    </TextView>

    <TextView
        android:id="@+id/TVMorningHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:text="Morning Workout of the Week!"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/TVMorningWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text=""
        android:textAlignment="center"
        android:layout_below="@+id/TVMorningHeading"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/TVEveningHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Evening Workout of the Week!"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/TVMorningWorkout"/>

    <TextView
        android:id="@+id/TVEveningWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text=""
        android:textAlignment="center"
        android:layout_below="@+id/TVEveningHeading"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>